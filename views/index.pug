doctype html
html
  head
    title Task Manager
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css")
    style.
      .form-control {
        padding: 0.4rem;
      }
  body
    .container.mt-4
      h2.text-center.mb-4 Task Manager
      form#signInForm(action="/sign-in" method="POST" class="w-50 mx-auto")
        .row.g-2.justify-content-center
          .col-auto
            button.btn.btn-primary(type="button" onclick="window.location='/user/view/sign-in'") Sign In
          .col-auto
            button.btn.btn-secondary(type="button" onclick="window.location='/user/view/log-in'") Log In